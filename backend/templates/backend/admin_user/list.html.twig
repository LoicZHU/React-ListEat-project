{% extends 'base.html.twig' %}

{% block title %}ListEat admin{% endblock %}

{% block body %}



    </div>
        <div class="content">
         {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} mt-3">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title"><span class="admin">Liste administrateurs</span></h4>
                        </div>
                        
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead class=" text-primary">
                                    <th>
                                        #
                                    </th>
                                    <th>
                                        Prénom
                                    </th>
                                    <th>
                                        Nom
                                    </th>
                                    <th>
                                        Rôle
                                    </th>
                                    <th class="text-right">
                                        Email
                                    </th>
                                    </thead>
                                    <tbody>
                                    {% for user in users %}
                                    <tr>
                                        <td>
                                        {{ user.id }}
                                        </td>
                                        <td>
                                        {{ user.firstName }}
                                        </td>
                                        <td>
                                        {{ user.lastName }}
                                        </td>
                                        <td>
                                        {{ user.role.name }}
                                        </td>
                                        <td class="text-right">
                                        {{ user.email }}
                                        </td>
                                        <td>
                                            <a href="{{ path('backend_user_show', {'id': user.id}) }}"><i class="fas fa-external-link-alt "></i></a>
                                            <a href="{{ path('backend_admin_user_edit', {'id': user.id}) }}"><i class="fas fa-user-edit "></i></a>
                                        </td>
                                        <td>
                                        <form action="{{ path('backend_user_delete', {id: user.id}) }}" method="post" onsubmit="return confirm('Supprimer l'utilisateur {{ user.firstName|e('js') }} ?')">
                
                                            {# the argument of csrf_token() is an arbitrary string used to generate the token #}
                                          
                                            {# Modification (surcharge) de la méthode HTTP #}
                                            <input type="hidden" name="_method" value="DELETE" />

                                            <button ype="submit" title="Delete"><i class="fa fa-trash"></i></button>
                                        </form>
                        
                                        </td>
                                    </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>




{% endblock %}
